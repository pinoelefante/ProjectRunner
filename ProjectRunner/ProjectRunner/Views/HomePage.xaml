        </ContentPage>
        <ContentPage>
            <Image Source="football1_bg.jpg" Aspect="AspectFit" HorizontalOptions="Center"/>
        </ContentPage>
        <ContentPage>
            <Image Source="football1_bg_desktop.jpg" Aspect="AspectFit" HorizontalOptions="Center"/>
        </ContentPage>
        <ContentPage>
            <Image Source="football2_bg.jpg" Aspect="AspectFit" HorizontalOptions="Center"/>
        </ContentPage>
        <ContentPage>
            <Image Source="football2_bg_desktop.jpg" Aspect="AspectFit" HorizontalOptions="Center"/>
        </ContentPage>
        <ContentPage>
            <Image Source="football3_bg.jpg" Aspect="AspectFit" HorizontalOptions="Center"/>
        </ContentPage>
        <ContentPage>
            <Image Source="football3_bg_desktop.jpg" Aspect="AspectFit" HorizontalOptions="Center"/>
        </ContentPage>
        <ContentPage>
            <Image Source="football4_bg.jpg" Aspect="AspectFit" HorizontalOptions="Center"/>
        </ContentPage>
        <ContentPage>
            <Image Source="football4_bg_desktop.jpg" Aspect="AspectFit" HorizontalOptions="Center"/>
        </ContentPage>
        <ContentPage>
            <Image Source="running1_bg.jpg" Aspect="AspectFit" HorizontalOptions="Center"/>
        </ContentPage>
        <ContentPage>
            <Image Source="running1_bg_desktop.jpg" Aspect="AspectFit" HorizontalOptions="Center"/>
        </ContentPage>
        <ContentPage>
            <Image Source="running2_bg.jpg" Aspect="AspectFit" HorizontalOptions="Center"/>
        </ContentPage>
        <ContentPage>
            <Image Source="running3_bg.jpg" Aspect="AspectFit" HorizontalOptions="Center"/>
        </ContentPage>
        <ContentPage>
            <Image Source="tennis1_bg.jpg" Aspect="AspectFit" HorizontalOptions="Center"/>
        </ContentPage>
        <ContentPage>
