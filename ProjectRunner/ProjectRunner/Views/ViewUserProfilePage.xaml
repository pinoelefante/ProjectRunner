<?xml version="1.0" encoding="utf-8" ?>
<views:MyContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectRunner.Views.ViewUserProfilePage"
             xmlns:views="clr-namespace:ProjectRunner.Views"
             Title="View user profile"
             BindingContext="{Binding ViewUserProfileViewModel, Source={StaticResource Locator}}">
    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition />
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackLayout Orientation="Vertical" Margin="5">
                <Image Source="{Binding User, Converter={StaticResource UserImageConverter}}" WidthRequest="64" HeightRequest="64" HorizontalOptions="Center"/>
                <Label Text="{Binding User.Username}" HorizontalOptions="Center"/>
            </StackLayout>

            <StackLayout Grid.Row="2" IsVisible="{Binding IsCurrentUser, Converter={StaticResource NotBoolean}}">
                <Button Text="Add friend" IsVisible="{Binding IsFriend, Converter={StaticResource NotBoolean}}"/>
                <Button Text="Remove friend" IsVisible="{Binding IsFriend}"/>
                <Button Text="Richiesta inviata" IsVisible="{Binding IsFriendshipRequested}"/>
            </StackLayout>
            
        </Grid>
    </ScrollView>
</views:MyContentPage>