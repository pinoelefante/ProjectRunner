<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectRunner.Views.SettingsPage">
    <ContentPage.Content>
        <StackLayout>
            <Picker Title="Unit of measure">
                <Picker.Items>
                    <x:String>KM</x:String> <!-- kilometers -->
                    <x:String>MI</x:String> <!-- Miles -->
                </Picker.Items>
            </Picker>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>