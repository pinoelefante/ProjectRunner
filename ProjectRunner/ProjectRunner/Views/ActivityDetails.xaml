<?xml version="1.0" encoding="utf-8" ?>
<pages:MyTabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectRunner.Views.ActivityDetails"
             xmlns:pages="clr-namespace:ProjectRunner.Views;assembly=ProjectRunner"
             Title="{Binding CurrentActivity.Sport, Converter={StaticResource SportNameConverter}, Mode=OneWay}"
             BindingContext="{Binding ActivityDetailsViewModel, Source={StaticResource Locator}}">
  <!--Pages can be added as references or inline-->
  <pages:ActivityDetailsOverview/>

  <pages:ActivityDetailsPeople/>

  <pages:ActivityDetailsChat/>

</pages:MyTabbedPage>